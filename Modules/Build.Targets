<?xml version="1.0" encoding="utf-8"?>
<Project
  xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
  DefaultTargets="All">

  <ItemGroup>
    <WelcomeModule Include="$(ProjectDir)Welcome\*.*"/>
  </ItemGroup>

  <Target Name="AfterBuild">
    <Copy SourceFiles="@(WelcomeModule)" DestinationFolder="$(SolutionDir)Web\src\modules\welcome" />
  </Target>
</Project>